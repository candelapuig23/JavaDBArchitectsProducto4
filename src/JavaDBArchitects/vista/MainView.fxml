<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox alignment="TOP_CENTER" prefHeight="814.0" prefWidth="1088.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaDBArchitects.vista.MainViewController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;-fx-background-color: linear-gradient(to right, #4CAF50, #2E7D32);">
         <children>
            <Label fx:id="labelTitulo"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 2, 2);"
                   text="Centro excursionista Senderos y Montañas" />
         </children>
      </HBox>

      <!-- TabPane para cambiar entre formularios -->
      <TabPane>
         <tabs>
            <!-- Pestaña de Registrar Excursión -->
            <Tab text="Registrar Excursión">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar Excursión" />
                     <GridPane hgap="10" style="-fx-padding: 0 0 0 50;" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="ID Excursión:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <TextField fx:id="txtIdExcursion" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                           <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <TextField fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                           <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <DatePicker fx:id="dateFecha" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                           <Label text="Número de Días:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                           <TextField fx:id="txtNumDias" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                           <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                           <TextField fx:id="txtPrecio" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                           <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                           <TextField fx:id="txtCodigo" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        </children>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>
                     <Button onAction="#registrarExcursion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Registrar Excursión" />
                  </VBox>
               </content>
            </Tab>

            <!-- Pestaña de Registrar Socio -->
            <Tab text="Registrar Socio">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar Socio" />
                     <GridPane hgap="10" style="-fx-padding: 0 0 0 50;" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                           <Label text="Tipo de Socio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <ComboBox fx:id="cbTipoSocio" onAction="#actualizarFormularioTipoSocio" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                           <Label text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <TextField fx:id="txtNIF" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                           <Label fx:id="lblIdFederacion" text="ID Federación:" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                           <TextField fx:id="txtIdFederacion" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                           <Label fx:id="lblNombreFederacion" text="Nombre Federación:" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                           <TextField fx:id="txtNombreFederacion" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                           <Label fx:id="lblIdPadreMadre" text="ID Padre/Madre:" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                           <TextField fx:id="txtIdPadreMadre" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        </children>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>
                     <Button onAction="#registrarSocio" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Registrar Socio" />
                  </VBox>
               </content>
            </Tab>

            <!-- Inscribir en excursión -->
            <Tab text="Inscribir en Excursión">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Inscribir en Excursión" />
                     <GridPane hgap="10" style="-fx-padding: 0 0 0 50;" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="Número de Socio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <TextField fx:id="txtNumeroSocio" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                           <Label text="Código de Excursión:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <TextField fx:id="txtCodigoExcursion" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                           <Label text="Fecha de Inscripción:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <DatePicker fx:id="dateFechaInscripcion" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </children>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>
                     <Button onAction="#inscribirEnExcursion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Inscribir" />
                  </VBox>
               </content>
            </Tab>

            <!-- Listar Excursiones por Fecha -->
            <Tab text="Listar Excursiones por Fecha">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 0 0 0 50;">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Listar Excursiones por Fecha" />

                     <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <DatePicker fx:id="dateInicio" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                           <Label text="Fecha Fin:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <DatePicker fx:id="dateFin" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        </children>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>

                     <Button onAction="#listarExcursionesPorFecha" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Listar Excursiones" />

                     <TableView fx:id="tablaExcursiones">
                        <columns>
                           <TableColumn fx:id="colCodigo" text="Código" />
                           <TableColumn fx:id="colDescripcion" text="Descripción" />
                           <TableColumn fx:id="colFecha" text="Fecha" />
                           <TableColumn fx:id="colNumDias" text="Número de Días" />
                           <TableColumn fx:id="colPrecio" text="Precio" />
                        </columns>
                     </TableView>
                  </VBox>
               </content>
            </Tab>

            <!-- Pestaña de Listar Inscripciones -->
            <Tab text="Listar Inscripciones">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Inscripciones" />

                     <!-- Tabla para mostrar inscripciones -->
                     <TableView fx:id="tablaInscripciones" prefHeight="300" prefWidth="700">
                        <columns>
                           <!-- Columna para ID de inscripción -->
                           <TableColumn fx:id="colIdInscripcion" prefWidth="150" text="ID Inscripción" />
                           <!-- Columna para Nombre del Socio -->
                           <TableColumn fx:id="colNombreSocio" prefWidth="200" text="Nombre del Socio" />
                           <!-- Columna para Descripción de la Excursión -->
                           <TableColumn fx:id="colDescripcionExcursion" prefWidth="200" text="Excursión" />
                           <!-- Columna para Fecha de Inscripción -->
                           <TableColumn fx:id="colFechaInscripcion" prefWidth="150" text="Fecha de Inscripción" />
                        </columns>
                     </TableView>

                     <!-- Botón para listar inscripciones -->
                     <Button onAction="#listarInscripciones" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Listar Inscripciones" />
                  </VBox>
               </content>
            </Tab>

            <!-- Consultar Factura Mensual -->
            <Tab text="Consultar Factura Mensual">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 10;">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Consultar Factura Mensual" />
                     <HBox alignment="TOP_LEFT" prefHeight="25.0" prefWidth="860.0" spacing="10" style="-fx-padding: 10" >
                        <Label text="Número de Socio:" />
                        <TextField fx:id="txtNumeroSocioFactura" promptText="Ingresa el número de socio" />
                        <Button onAction="#consultarFacturaMensual" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Consultar Factura" />
                     </HBox>
                     <TextArea fx:id="txtResultadoFactura" editable="false" prefHeight="200" wrapText="true" />
                  </VBox>
               </content>
            </Tab>

            <!-- Modificar datos del Socio -->

            <Tab text="Modificar Datos del Socio">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modificar Datos del Socio" />
                     <GridPane alignment="TOP_LEFT" hgap="10" vgap="10" style="-fx-padding: 30;">
                        <children>
                           <Label text="Número de Socio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <TextField fx:id="txtIdSocioModificar" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                           <Label text="Nuevo Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                           <TextField fx:id="txtNuevoNombre" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                           <Label text="Nuevo NIF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                           <TextField fx:id="txtNuevoNIF" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                           <Label text="Nuevo Tipo de Socio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                           <ComboBox fx:id="cbNuevoTipoSocio" GridPane.columnIndex="1" GridPane.rowIndex="3" />


                           <Label text="ID Nueva Federación:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                           <TextField fx:id="txtNuevaFederacionId" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        </children>
                        <columnConstraints>
                           <ColumnConstraints />
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>
                     <Button onAction="#modificarDatosSocio" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Modificar Datos" />

                  </VBox>
               </content>
            </Tab>


            <!-- Pestaña de Mostrar Socios por tipo -->
            <Tab text="Mostrar Socios por tipo">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 0 0 0 15;">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Mostrar socios por tipo" />
                        <HBox>
                           <ComboBox fx:id="cbTipoSocioBuscar" promptText="Selecciona el tipo de socio">
                              <items>
                                 <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Estandar" />
                                    <String fx:value="Federado" />
                                    <String fx:value="Infantil" />
                                 </FXCollections>
                              </items>
                           </ComboBox>
                        </HBox>
                        <Button onAction="#mostrarSociosPorTipo" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Mostrar Socios" />
                        <TextArea fx:id="txtResultadosSocios" editable="false" prefHeight="205.0" prefWidth="1073.0" />
                     </children>
                  </VBox>
               </content>
            </Tab>

            <!-- Pestaña de Eliminar Inscricpión -->

            <Tab text="Eliminar Inscripción">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Eliminar Inscripción" />
                     <HBox prefHeight="15.0" prefWidth="500.0" style="-fx-padding: 0 0 0 15;">
                        <children>
                           <Label prefHeight="17.0" prefWidth="323.0" text="Indique el identificador de la incripción que quiere eliminar:" />
                        </children>
                     </HBox>
                     <HBox prefHeight="32.0" prefWidth="500.0" style="-fx-padding: 0 0 0 15;">
                        <children>
                           <TextField fx:id="txtIdEliminarInscripcion" />
                        </children>
                     </HBox>
                     <HBox alignment="CENTER" prefHeight="75.0" prefWidth="500.0">
                        <children>
                           <Button onAction="#eliminarInscripcion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Eliminar Inscripción" />
                        </children>
                     </HBox>
                  </VBox>
               </content>
            </Tab>

            <!-- Pestaña de Eliminar socio -->

            <Tab text="Eliminar Socio">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Eliminar Socio" />
                     <GridPane alignment="TOP_LEFT" hgap="10" vgap="10" style="-fx-padding: 10;">
                        <children>
                           <Label text="Número de Socio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                           <TextField fx:id="txtIdEliminarSocio" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        </children>
                        <columnConstraints>
                           <ColumnConstraints />
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                        </rowConstraints>
                     </GridPane>
                     <Button onAction="#eliminarSocio" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Eliminar Socio" />
                  </VBox>
               </content>
            </Tab>


            <!-- Pestaña de Mostrar inscripciones con filtro -->

            <Tab text="Mostrar Inscripciones con Filtros">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Mostrar Inscripciones con Filtros" />
                        <HBox spacing="10">
                           <Label text="Número de Socio:" />
                           <TextField fx:id="txtNumeroSocioinscripcion" promptText="Número del socio (opcional)" />
                        </HBox>
                        <HBox spacing="10">
                           <Label text="Fecha Inicio:" />
                           <DatePicker fx:id="dpFechaInicio" />
                           <Label text="Fecha Fin:" />
                           <DatePicker fx:id="dpFechaFin" />
                        </HBox>
                        <Button onAction="#mostrarInscripcionesConFiltros" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Mostrar Inscripciones" />
                        <TextArea fx:id="txtResultadosInscripciones" editable="false" prefHeight="200" />
                     </children>
                  </VBox>
               </content>
            </Tab>



            <!-- Pestaña de Eliminar Excursion -->

            <Tab text="Eliminar Excursión">
               <content>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Eliminar Excursión" />
                     <HBox prefHeight="15.0" prefWidth="500.0" style="-fx-padding: 0 0 0 15;">
                        <children>
                           <Label prefHeight="17.0" prefWidth="323.0" text="Indique el identificador de la excursión que quiere eliminar:" />
                        </children>
                     </HBox>
                     <HBox prefHeight="32.0" prefWidth="500.0" style="-fx-padding: 0 0 0 15;">
                        <children>
                           <TextField fx:id="txtIdEliminarExcursion" />
                        </children>
                     </HBox>
                     <HBox alignment="CENTER" prefHeight="75.0" prefWidth="500.0">
                        <children>
                           <Button onAction="#eliminarExcursion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Eliminar Excursión" />
                        </children>
                     </HBox>
                     </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
