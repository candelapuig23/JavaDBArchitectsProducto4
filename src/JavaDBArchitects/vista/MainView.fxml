<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaDBArchitects.vista.MainViewController">
   <children>
      <!-- Título -->
      <HBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 10;">
         <children>
            <Label fx:id="labelTitulo" text="Centro excursionista Senderos y Montañas" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
         </children>
      </HBox>

      <!-- TabPane para cambiar entre formularios -->
      <TabPane>
         <tabs>
            <!-- Pestaña de Registrar Excursión -->
            <Tab text="Registrar Excursión">
               <content>
                  <VBox alignment="CENTER" spacing="10">
                     <Label text="Registrar Excursión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                     <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="ID Excursión:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtIdExcursion" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                           <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                           <Label text="Fecha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                           <DatePicker fx:id="dateFecha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                           <Label text="Número de Días:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtNumDias" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                           <Label text="Precio:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtPrecio" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                           <Label text="Código:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtCodigo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        </children>
                     </GridPane>
                     <Button text="Registrar Excursión" onAction="#registrarExcursion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  </VBox>
               </content>
            </Tab>

            <!-- Pestaña de Registrar Socio -->
            <Tab text="Registrar Socio">
               <content>
                  <VBox alignment="CENTER" spacing="10">
                     <Label text="Registrar Socio" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                     <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints halignment="RIGHT" />
                           <ColumnConstraints halignment="LEFT" />
                        </columnConstraints>
                        <children>
                           <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                           <Label text="Tipo de Socio:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                           <ComboBox fx:id="cbTipoSocio" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                           <Label text="NIF:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtNIF" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                           <Label text="ID Federación:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtIdFederacion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                           <Label text="Nombre Federación:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtNombreFederacion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                           <Label text="ID Padre/Madre:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                           <TextField fx:id="txtIdPadreMadre" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        </children>
                     </GridPane>
                     <Button text="Registrar Socio" onAction="#registrarSocio" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
